pipeline {
    agent any

    stages {
        stage('Start') {
            steps {
                echo 'Rozpoczynam pipeline...'
            }
        }

        stage('Checkout') {
            steps {
                echo 'Tutaj byłby checkout kodu z Git'
            }
        }

        stage('Test') {
            steps {
                echo 'Uruchamiam testy (tu byłyby testy JUnit, Playwright itd.)'
            }
        }

    }

}
